<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cinema.styles.css" asp-append-version="true" />
</head>
<body class="text-white" style="background-color:rgba(7, 16, 22, 0.85);">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Cineworld</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-danger" asp-area="" asp-controller="Movies" asp-action="Index">Movies</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-danger" asp-area="" asp-controller="Screenings" asp-action="Index">Screenings</a>
                        </li>
                         <li class="nav-item">
                              @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <a class="nav-link text-danger" asp-area="" asp-controller="Clients" asp-action="Index">Clients</a>
                            }
                        </li>
                        <li class="nav-item">
                              @if (User.Identity.IsAuthenticated && User.IsInRole("Client"))
                            {
                                <a class="nav-link text-danger" asp-area="" asp-controller="Clients" asp-action="Profile">My profile</a>
                            }
                        </li>
                         <li class="nav-item">
                               @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <a class="nav-link text-danger" asp-area="" asp-controller="Reservations" asp-action="Index">All Reservations</a>
                            }
                        </li>
                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="text-white">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-dark">
            &copy; 2022 - Cineworld  - <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>