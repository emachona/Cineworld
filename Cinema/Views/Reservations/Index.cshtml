@model Cinema.ViewModels.ReservationFilterVM

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:red">Reservations</h1>

<form asp-controller="Reservations" asp-action="Index" method="get">
    <span style="color:rgb(243,227,226)">Movie: </span><select asp-for="searchMovie" asp-items="Model.movieTitleList" class="form-horizontal">
        <option value="">All</option>
    </select>
    <input type="submit" value="Filter"/>
</form>
<br />
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.reservations.FirstOrDefault().Screening.Movie.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reservations.FirstOrDefault().Screening.Cinema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reservations.FirstOrDefault().User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reservations.FirstOrDefault().Seat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.reservations) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Screening.Movie.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Screening.Cinema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seat)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReservationId" style="color:rgb(243,227,226)">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReservationId" style="color:rgb(243,227,226)">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReservationId" style="color:rgb(243,227,226)">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
